@using Not_Bankası.Models
@{
    ViewBag.Title = "NotYukleme";
    Layout = "~/Views/Shared/_LayoutUye.cshtml";
}

@section head{

    <head>
        <link href="/Css/DosyaYuklemeCSS.css" rel="stylesheet" />
    </head>

    <!-- Not yükleme css -->
}
@model List<Universite>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Not Yükleme</h1>
</div>
<div class="row">
    <div class="container">
        <div class="col-md-10">
            <div class="stepwizard">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                        <p>Not Bilgileri</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                        <p>Üniversite Bilgileri</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                        <p>Son</p>
                    </div>
                </div>
            </div>
        </div>
        <form role="form" class="text-primary" enctype="multipart/form-data" action="/NotYukleme/NotYukleme" method="post">
            <div class="row setup-content" id="step-1">
                <div class="col-md-8" style="margin-left:170px;">
                    <h3>Not Bilgileri</h3>
                    <div class="form-group">
                        <label class="control-label">Yükelenecek Notu Seçiniz</label>
                        <input class="form-control" type="file" name="YukelenenNot" value="" required="required" style="height:45px;" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Notun Adı</label>
                        <input maxlength="100" type="text" required="required" class="form-control" placeholder="Not adını giriniz.." name="NotAdi" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ders Adı</label>
                        <input maxlength="100" type="text" required="required" class="form-control" placeholder="Ders adını giriniz.." name="DersAdi" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Açıklama</label>
                        <textarea type="text" class="form-control " placeholder="Açıklama giriniz.." name="Aciklama" cols="5" rows="5"></textarea>
                    </div>
                    <button class="btn btn-primary nextBtn btn-success" type="button">İleri</button>
                </div>
            </div>
            <div class="row setup-content" id="step-2">
                <div class="col-md-8" style="margin-left:170px;">
                    <h3>Üniversite Bilgileri</h3>
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label">Öğretim Üyesi</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Öğretim Üyesi adını giriniz" name="OgretimUyesi" />
                        </div>
                        <label class="control-label">Üniveriste İsmi</label>
                        <select class="form-control search-slt" id="secilenuniversiteID" name="comboUni">
                            <option hidden>Üniversite Seciniz..</option>
                            @foreach (Universite universite in Model)
                            {
                                <option value="@universite.Universite_Id">@universite.UniversiteAdı</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Bölüm İsmi</label>
                        <select class="form-control search-slt" id="bolumler" name="comboBolum">
                            <option hidden>Bölüm Seciniz</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6" style="display:inline-block">
                            <label class="control-label">Yıl</label>
                            <input type="text" class="form-control" placeholder="Yıl giriniz" name="Yil" />
                        </div>
                        <div class="form-group col-md-6" style="display:inline-block">
                            <label class="control-label">Dönem</label>
                            <select class="form-control" name="Donem">
                                <option hidden>Dönem seçiniz</option>
                                <option value="Bahar">Bahar</option>
                                <option value="Güz">Güz</option>
                            </select>
                        </div>
                    </div>
                    <button style="display:block" class="btn btn-primary nextBtn btn-success" type="button">İleri</button>
                </div>
            </div>
            <br />
            <div class="row setup-content" id="step-3">
                <div class="col-md-8" style="margin-left:170px;">
                    <div class="col-md-12">
                        <h3 class="text-center"> Yükleme İşlemini Tamamlamak İçin Boş Alan Bırakmayınız. Yükleme İşlemini Tamamlamak İçin Tıklayınız.</h3>
                        <button class="btn btn-success btn-success pull-right" type="submit">Son</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section script{

    <!-- Not yükleme js -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/DosyaYukelemeJS.js"></script>
    <!-- Not yükleme js -->
    <script src="~/Scripts/AramaSonuclari.js"></script>
}

